#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);

const int sensorA = A0;
const int buzzer = 8; 
const int sensorD = 7;  // optional digital pin

void setup() {
  Serial.begin(9600);

  pinMode(sensorA, INPUT);
  pinMode(sensorD, INPUT);
  pinMode(buzzer, OUTPUT);

  lcd.init();
  lcd.backlight();
  lcd.clear();

  lcd.setCursor(0,0);
  lcd.print("Fire Alarm Ready");
  delay(1000);
  lcd.clear();
}

void loop() {
  int analogValue = analogRead(sensorA);
  int digitalValue = digitalRead(sensorD);

  // Sensor is inverted: HIGH = no flame, LOW = flame
  int flamePercent = map(1023 - analogValue, 0, 1023, 0, 100);

  // Prevent random values in clean air
  if (flamePercent < 5) flamePercent = 0;

  // Serial monitor debug
  Serial.print("Analog: ");
  Serial.print(analogValue);
  Serial.print("   Digital: ");
  Serial.print(digitalValue);
  Serial.print("   Flame%: ");
  Serial.println(flamePercent);

  // LCD Output
  lcd.setCursor(0,0);
  lcd.print("Flame: ");
  lcd.print(flamePercent);
  lcd.print("%   "); // spaces help remove old characters

  lcd.setCursor(0,1);
  if (flamePercent > 20) {
    lcd.print("!!! FIRE DETECTED ");
    tone(buzzer, 2000);
  } else {
    lcd.print("Safe Environment  ");
    noTone(buzzer);
  }

  delay(200);
}
